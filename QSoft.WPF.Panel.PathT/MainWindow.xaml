<Window x:Class="QSoft.WPF.Panel.PathT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QSoft.WPF.Panel.PathT"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        xmlns:qpanel="clr-namespace:QSoft.WPF.Panel"
        Title="MainWindow" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Circle">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <qpanel:CirclePanel Grid.Row="1">
                    <Border Width="100" Height="100" Background="Red" BorderBrush="Green" BorderThickness="1"/>
                    <Border Width="100" Height="100" Background="Red" BorderBrush="Green" BorderThickness="1"/>
                    <Border Width="100" Height="100" Background="Red" BorderBrush="Green" BorderThickness="1"/>
                    <Border Width="100" Height="100" Background="Red" BorderBrush="Green" BorderThickness="1"/>
                </qpanel:CirclePanel>
            </Grid>
        </TabItem>
        <TabItem Header="aa">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Slider x:Name="slider" ValueChanged="slider_ValueChanged" Minimum="0" SmallChange="1" LargeChange="1" Maximum="1000"/>
                <!--<Canvas>
        <Path x:Name="path" Stroke="Red" Canvas.Left="120" Canvas.Top="220">
            <Path.Data>
                <EllipseGeometry RadiusX="100" RadiusY="200"/>
            </Path.Data>
        </Path>
    </Canvas>-->
                <Canvas Grid.Row="1">
                    <Line x:Name="line" Stroke="Red" StrokeThickness="2" X1="100" Y1="100" X2="100" Y2="0"/>
                </Canvas>
            </Grid>
        </TabItem>
    </TabControl>
    
</Window>
